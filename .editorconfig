# EditorConfig is awesome: https://editorconfig.org

root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 79

[*.py]
indent_style = space
max_line_length = 88

[*.md]
indent_size = 2
trim_trailing_whitespace = false
