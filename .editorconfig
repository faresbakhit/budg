# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 79

[*.py]
max_line_length = 119

[*.md]
indent_size = 2
trim_trailing_whitespace = false
